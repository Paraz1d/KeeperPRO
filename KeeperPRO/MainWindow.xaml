<Window x:Class="KeeperPRO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:KeeperPRO"
        mc:Ignorable="d"
        Title="KeeperPRO - Система управления заявками" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <TabControl x:Name="MainTabControl">
            <!-- Login Tab -->
            <TabItem Header="Вход" x:Name="LoginTab">
                <StackPanel Margin="20" VerticalAlignment="Center">
                    <TextBlock Text="KeeperPRO" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Логин:" Margin="0,5"/>
                    <TextBox x:Name="LoginTextBox" Margin="0,0,0,10"/>

                    <TextBlock Text="Пароль:" Margin="0,5"/>
                    <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>

                    <Button Content="Войти" 
                            Click="LoginButton_Click" 
                            Padding="10,5"
                            HorizontalAlignment="Center"/>

                    <TextBlock Text="Еще не зарегистрированы?" 
                               Margin="0,20,0,5"
                               HorizontalAlignment="Center"/>

                    <Button Content="Регистрация" 
                            Click="ShowRegisterButton_Click" 
                            Padding="10,5"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </TabItem>

            <!-- Registration Tab -->
            <TabItem Header="Регистрация" x:Name="RegisterTab" Visibility="Collapsed">
                <ScrollViewer>
                    <StackPanel Margin="20" Width="400">
                        <TextBlock Text="Регистрация нового пользователя" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="ФИО:" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                            <TextBox x:Name="FullNameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

                            <TextBlock Text="Телефон:" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                            <TextBox x:Name="PhoneTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

                            <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                            <TextBox x:Name="EmailTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

                            <TextBlock Text="Дата рождения:" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
                            <DatePicker x:Name="BirthDatePicker" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>

                            <TextBlock Text="Серия паспорта:" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
                            <TextBox x:Name="PassportSeriesTextBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" MaxLength="4"/>

                            <TextBlock Text="Номер паспорта:" Grid.Row="5" Grid.Column="0" Margin="0,5"/>
                            <TextBox x:Name="PassportNumberTextBox" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10" MaxLength="6"/>

                            <TextBlock Text="Логин:" Grid.Row="6" Grid.Column="0" Margin="0,5"/>
                            <TextBox x:Name="UsernameTextBox" Grid.Row="6" Grid.Column="1" Margin="0,0,0,10"/>

                            <TextBlock Text="Пароль:" Grid.Row="7" Grid.Column="0" Margin="0,5"/>
                            <PasswordBox x:Name="RegisterPasswordBox" Grid.Row="7" Grid.Column="1" Margin="0,0,0,10"/>

                            <TextBlock Text="Подтверждение пароля:" Grid.Row="8" Grid.Column="0" Margin="0,5"/>
                            <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="8" Grid.Column="1" Margin="0,0,0,20"/>

                            <StackPanel Grid.Row="9" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Назад" Click="BackToLoginButton_Click" Margin="0,0,10,0" Padding="10,5"/>
                                <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Padding="10,5"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Requests Tab -->
            <TabItem Header="Мои заявки" x:Name="RequestsTab" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button Content="Новая заявка" Click="NewRequestButton_Click" Margin="0,0,10,0"/>
                        <Button Content="Выйти" Click="LogoutButton_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="RequestsDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding request_id}" Width="Auto"/>
                            <DataGridTextColumn Header="Дата начала" Binding="{Binding start_date, StringFormat={}{0:dd.MM.yyyy}}"/>
                            <DataGridTextColumn Header="Дата окончания" Binding="{Binding end_date, StringFormat={}{0:dd.MM.yyyy}}"/>
                            <DataGridTextColumn Header="Цель" Binding="{Binding purpose}" Width="*"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding status_name}"/>
                            <DataGridCheckBoxColumn Header="Групповая" Binding="{Binding is_group}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Content="Обновить" Click="RefreshRequestsButton_Click" Grid.Row="2" Margin="10" HorizontalAlignment="Right" Padding="10,5"/>
                </Grid>
            </TabItem>

            <!-- New Request Tab -->
            <TabItem Header="Новая заявка" x:Name="NewRequestTab" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="10">
                        <CheckBox x:Name="IsGroupCheckBox" Content="Групповая заявка" Margin="0,0,0,10"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="10" Width="400">
                        <TextBlock Text="Дата начала:" Margin="0,5"/>
                        <DatePicker x:Name="StartDatePicker" Margin="0,0,0,10" SelectedDate="{x:Static sys:DateTime.Today}"/>

                        <TextBlock Text="Дата окончания:" Margin="0,5"/>
                        <DatePicker x:Name="EndDatePicker" Margin="0,0,0,10" SelectedDate="{x:Static sys:DateTime.Today}"/>

                        <TextBlock Text="Цель посещения:" Margin="0,5"/>
                        <TextBox x:Name="PurposeTextBox" Margin="0,0,0,10" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                        <TextBlock x:Name="EmployeeLabel" Text="Сопровождающий сотрудник:" Margin="0,5"/>
                        <ComboBox x:Name="EmployeeComboBox" Margin="0,0,0,10" DisplayMemberPath="full_name"/>

                        <TextBlock Text="Примечания:" Margin="0,5"/>
                        <TextBox x:Name="NotesTextBox" Margin="0,0,0,10" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Отправить" Click="SubmitRequestButton_Click" Margin="0,0,10,0" Padding="10,5"/>
                        <Button Content="Отмена" Click="CancelRequestButton_Click" Padding="10,5"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>